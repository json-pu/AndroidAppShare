<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
 >

    <Button
        android:id="@+id/button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text type" />
    
    <Button
        android:id="@+id/button_img_exteranl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="image type from exteranl" />
    
    <Button
        android:id="@+id/button_img_interanl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="image type from interanl" />
    
    <Button
        android:id="@+id/button_img_assets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="image type from asseats" />
    
    <Button
        android:id="@+id/button_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="file type" />

    <Button
        android:id="@+id/button_pack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="share by package name" />

</LinearLayout>

